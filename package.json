{
  "name": "mygpumeasure",
  "version": "1.0.0",
  "description": "GPU Measurement Application",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build:client": "tsc && npx vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:all": "npm run build:client && npm run build:server",
    "server": "tsx src/index.ts",
    "start": "concurrently \"npm run server\" \"npm run dev\" \"docker start gpu-database\"",
    "start:prod": "NODE_ENV=production node dist/server/index.js",
    "start:prod:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:prod": "pm2 stop mygpupower",
    "restart:prod": "pm2 restart mygpupower",
    "logs:prod": "pm2 logs mygpupower",
    "status:prod": "pm2 status",
    "deploy": "npm run build:all && npm run start:prod:pm2"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@tanstack/react-query": "^5.65.1",
    "@tanstack/react-query-devtools": "^5.64.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "express": "^4.21.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.3",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}